html
    head
        title= title
        style(type="text/css").
            .line {
                fill: none;
                stroke: steelblue;
                stroke-width: 2px;
            }
        script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js")
        script#chartdata(type='application/json')= JSON.stringify(chartdata)
    body
        div(style="display: block; width: 840px; height: 420px;")
            canvas(id="myChart")

        script.
            var data  = !{JSON.stringify(chartdata)};
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(function(item){return item.day;}),
                    datasets: [{
                        label: 'Messages/day in ' + '!{chatname}',
                        data: data.map(function(item){return item.count;}),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
            });

